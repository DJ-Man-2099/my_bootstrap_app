<nav class="navbar bg-dark px-5 mb-4 sticky-top">
  <h1 class="navbar navbar-nav text-white"><%= @title %></h1>
  <div class="d-flex justify-content-end", style="column-gap:10px">
    <%= button_to "Delete Post", blog_post_path(@post), method: :delete, data: {
                                                          turbo_confirm: "Are you sure you want to delete this post?",
                                                        }, class: "btn btn-outline-danger" %>
    <a href="<%= blog_post_path(@post) %>" class="btn btn-outline-primary">Cancel</a>
  </div>
</nav>
<div style="max-height: 85vh;">
  <div class="h-100 container card align-items-center bg-body py-1 col-6">
    <%= image_tag @post.cover_image, class: "card mb-2", style: "height: 20vh;width: 85%;object-fit: fill;"  if @post.cover_image.present? %>
    <%= render "form", post: @post %>
  </div>
</div>
